<%- include('includes/header') %>

<div class="container reg-page">
<form method="post" action="/users/register" class="form-signin">
      <h1 class="h3 mb-3 font-weight-normal text-center">User Registration</h1>
      <label class="sr-only">Name</label>
      <input type="text" name="Name" class="form-control" placeholder="Name" required autofocus>
      </br>
      <label class="sr-only">Email</label>
      <input type="text" name="email" class="form-control" placeholder="Email" required autofocus>
      </br>
      <label class="sr-only">Username</label>
      <input type="text" name="username" value="username" class="form-control" placeholder="Username" required autofocus>
      </br>
      <label class="sr-only">Password</label>
      <input type="password" name="Password" value="password" class="form-control" placeholder="Password" required>
      </br>
      <label class="sr-only">Confirm Password</label>
      <input type="password" name="Password2" value="password2" class="form-control" placeholder="Password Confrm" required>
      <p>Have account? <a href="/users/login">Login></a></p>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
    </form>
</div>

<%- include('includes/footer') %>